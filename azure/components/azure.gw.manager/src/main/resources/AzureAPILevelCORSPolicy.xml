<policies>
    <inbound>
        <base />
        <cors allow-credentials="false" terminate-unmatched-request="false">
            <allowed-origins>
                <origin>*</origin>
            </allowed-origins>
            <allowed-methods>
                <method>OPTIONS</method>
                <method>GET</method>
                <method>POST</method>
                <method>PATCH</method>
                <method>PUT</method>
                <method>DELETE</method>
            </allowed-methods>
            <allowed-headers>
                <header>authorization</header>
                <header>Access-Control-Allow-Origin</header>
                <header>Content-Type</header>
                <header>SOAPAction</header>
                <header>apikey</header>
                <header>Internal-Key</header>
            </allowed-headers>
        </cors>
    </inbound>
    <backend><base /></backend>
    <outbound><base /></outbound>
    <on-error><base /></on-error>
</policies>
